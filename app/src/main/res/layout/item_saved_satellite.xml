<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_margin="12dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Satellite Name and ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_satellite_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Satellite Name"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_satellite_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 12345"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Satellite Details (Orbital Period, Inclination) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_orbital_period"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Orbital Period: 90 min"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_inclination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Inclination: 51.6Â°"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="1"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Apogee and Perigee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_apogee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Apogee: 420 km"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_perigee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Perigee: 410 km"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="1"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
