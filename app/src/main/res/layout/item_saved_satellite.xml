<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/item_background">

        <!-- Satellite Name and ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_satellite_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/satellite_name"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_satellite_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_12345"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:paddingLeft="8dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </LinearLayout>

        <!-- Satellite Details (Orbital Period, Inclination) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_orbital_period"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/orbital_period_12345_min"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_inclination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/inclination_123"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </LinearLayout>

        <!-- Apogee and Perigee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_apogee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/apogee_12345_km"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_perigee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/perigee_123_km"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>