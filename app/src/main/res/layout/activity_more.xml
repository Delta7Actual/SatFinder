<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Glow + Icon -->
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/satfinder_logo"
                android:src="@drawable/glow_background"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/about_app_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_final"
                android:contentDescription="@string/app_name"
                android:elevation="6dp" />
        </FrameLayout>

        <!-- App Title + Tagline -->
        <TextView
            android:id="@+id/about_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/satfinder"
            android:textSize="36sp"
            style="@style/TextAppearance.SatFinder.Light"
            android:textColor="@color/secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/satellite_location_reimagined"
            android:textSize="14sp"
            android:textColor="@color/secondary_light"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textColor="@color/white"
            android:background="@color/primary"
            android:padding="6dp"
            android:textSize="13sp"
            android:layout_marginBottom="24dp" />

        <!-- About Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_par_1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_par_2"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Developer Info -->
        <TextView
            android:id="@+id/about_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developed_by"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- Contact & Links as Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/about_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mail_link"
                android:gravity="center"
                android:textColor="@color/white"
                android:autoLink="email"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/about_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/github_link"
                android:gravity="center"
                android:textColor="@color/white"
                android:autoLink="web"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/about_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_contribute"
                android:textColor="@color/secondary_light"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Acknowledgements Section -->
        <TextView
            android:id="@+id/about_acknowledgements_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_thanks"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/about_thanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/special_thanks_list"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:textColor="@color/white"
            android:text="@string/back"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
